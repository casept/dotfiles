#!/usr/bin/env bash

# -*- mode: bash -*-
# vi: set ft=bash :

set -xo pipefail

function help() {
	echo "Usage: colorscheme [light|dark|toggle|get]"
	exit 1
}

function light_yakuake() {
	for session in $(qdbus-qt6 "org.kde.yakuake" | grep /Sessions/); do
		qdbus-qt6 "org.kde.yakuake" "$session" setProfile 'Konsole light'
	done

	sed -i "/DefaultProfile=/c\DefaultProfile=Konsole light.profile" ~/.config/yakuakerc
	sed -i "/Skin=/c\Skin=ROUNDED" ~/.config/yakuakerc
}

function dark_yakuake() {
	for session in $(qdbus-qt6 "org.kde.yakuake" | grep /Sessions/); do
		qdbus-qt6 "org.kde.yakuake" "$session" setProfile 'Konsole dark'
	done

	sed -i "/DefaultProfile=/c\DefaultProfile=Konsole dark.profile" ~/.config/yakuakerc
	sed -i "/Skin=/c\Skin=ROUNDED DARK" ~/.config/yakuakerc
}

function light_konsole() {
	for pid in $(pidof konsole); do
		for session in $(qdbus-qt6 "org.kde.konsole-$pid" | grep /Sessions/); do
			qdbus-qt6 "org.kde.konsole-$pid" "$session" setProfile 'Konsole light'
		done
	done

	sed -i "/DefaultProfile=/c\DefaultProfile=Konsole light.profile" ~/.config/konsolerc
}

function dark_konsole() {
	for pid in $(pidof konsole); do
		for session in $(qdbus-qt6 "org.kde.konsole-$pid" | grep /Sessions/); do
			qdbus-qt6 "org.kde.konsole-$pid" "$session" setProfile 'Konsole dark'
		done
	done

	sed -i "/DefaultProfile=/c\DefaultProfile=Konsole dark.profile" ~/.config/konsolerc
}

function light_helix() {
	sed -i 's/theme = ".*"/theme = "gruvbox_light"/' "${HOME}/.config/helix/config.toml"
	# Force config reload
	pkill -USR1 hx
	pkill -USR1 helix
}

function dark_helix() {
	sed -i 's/theme = ".*"/theme = "gruvbox_dark_hard"/' "${HOME}/.config/helix/config.toml"
	# Force config reload
	pkill -USR1 hx
	pkill -USR1 helix
}

function plasma_fixup() {
	# Switching the entire theme also changes window decorations, change them back
  kwriteconfig6 --file kwinrc --group "org.kde.kdecoration2" --key library "bismuth_kdecoration"
  kwriteconfig6 --file kwinrc --group "org.kde.kdecoration2" --key theme "Bismuth"
}

function plasma_light() {
	lookandfeeltool -a org.kde.breeze.desktop
	plasma_fixup
}

function plasma_dark() {
	lookandfeeltool -a org.kde.breezedark.desktop
	plasma_fixup
}

function plasma_fixup_2() {
  # Tell kwin to reload it's configuration.
  # This must be delayed long enough for the color switch to have happened,
  # or some window elements will still be in the old theme for whatever reason.
  sleep 15
  qdbus-qt6 org.kde.KWin /KWin org.kde.KWin.reconfigure
}


function light() {
	echo "light" > ~/.colorrc
	plasma_light
	light_yakuake
	light_konsole
	light_helix
	plasma_fixup_2
}

function dark() {
	plasma_dark
	echo "dark" > ~/.colorrc
	dark_yakuake
	dark_konsole
	dark_helix
	plasma_fixup_2
}

function toggle() {
	local scheme
	if test -f "$HOME/.colorrc"; then
		scheme=$(cat ~/.colorrc)
	else
		# Default to dark
		scheme="dark"
	fi

	if [ "$scheme" == "dark" ]; then
		light
	else
		dark
	fi
}

function get() {
	local scheme
	if test -f "$HOME/.colorrc"; then
		scheme=$(cat ~/.colorrc)
	else
		# Default to dark
		scheme="dark"
	fi

	# All caps because it looks better in waybar
	echo "${scheme^^}"
}

if [ -z "$1" ]; then
	help
fi

if [ "$1" == "light" ]; then
	light
	exit 0
fi

if [ "$1" == "dark" ]; then
	dark
	exit 0
fi

if [ "$1" == "toggle" ]; then
	toggle
	exit 0
fi

if [ "$1" == "get" ]; then
	get
	exit 0
fi

help
