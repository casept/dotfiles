{
	"diagnostic.enable": true,
	"vimlsp.diagnostic.enable": true,

	"clangd.semanticHighlighting": true,
	"diagnostic-languageserver.filetypes": {
		"sh": "shellcheck",
		// clang-tidy (enabled by clangd extension) and cppcheck find different bugs, use both
		"cpp": "cppcheck"
	},

	"rust-analyzer.hoverActions.linksInHover": true,
	"rust-analyzer.checkOnSave.allTargets": false // Breaks on cross compile-only projects
}
