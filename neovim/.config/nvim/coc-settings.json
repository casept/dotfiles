{
	"diagnostic.enable": true,
	"codeLens.enable": true,
	"diagnostic.virtualText": true,
	"diagnostic.enableHighlightLineNumber": true,
	"diagnostic.virtualTextCurrentLineOnly": false,
	"vimlsp.diagnostic.enable": true,

	"diagnostic-languageserver.filetypes": {
		"sh": "shellcheck",
		// clang-tidy (enabled by clangd extension) and cppcheck find different bugs, use both
		"cpp": "cppcheck"
	},

	// If a header file's language is ambiguous, assume C++
    "clangd.fallbackFlags" : ["--std c++20 --language c++ "],

	// Breaks on cross compile-only projects
	"rust-analyzer.checkOnSave.allTargets": false,
	"rust-analyzer.lens.enable": true,

	"languageserver": {
    	"nix": {
			"command": "rnix-lsp",
			"filetypes": [
       			"nix"
      		]
    	}
  	}


}
